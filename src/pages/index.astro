---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Zmanim from "../components/Zmanim";
import ShabbatSchedule from "../components/ShabbatSchedule";
import ContactUs from "../components/ContactUs";
import content from "../../public/data/content.json";

const home = content.home;
---

<Layout title={home.title} description="New Milford, NJ">
  <Navbar slot="header" />
  <div class="container mx-auto p-4">
    <!-- Hero Section -->
    <div class="text-center py-4">
      <h1 class="text-2xl md:text-3xl font-bold mb-2">{home.title}</h1>
      <p class="text-gray-600 mb-4">{home.address}</p>
      <!-- <p class="text-gray-600 mb-6">{home.welcome}</p> -->
      <div class="flex justify-center space-x-4">
        <a href="/donate" class="bg-[#D4A373] text-white px-4 py-2 rounded"
          >Donate</a
        >
        <a
          href="mailto:info@bknm.org"
          class="border border-[#D4A373] text-[#D4A373] px-4 py-2 rounded"
          >Contact</a
        >
      </div>
    </div>

    <!-- Zmanim and Shabbat Schedule -->
    <div
      id="shabbat-schedule"
      class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12"
    >
      <Zmanim client:load />
      <ShabbatSchedule client:load />
