---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ContactUs from "../components/ContactUs";
import content from "../../public/data/content.json";

const home = content.home;
---

<Layout
  title="Events - Beis Knesses of New Milford"
  description="Upcoming events at Beis Knesses of New Milford."
>
  <Navbar slot="header" />
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Events</h1>
    <p class="text-gray-600">Check back soon for a full list of upcoming events!</p>
  </div>

  <!-- Contact Section -->
  <div id="contact" class="max-w-4xl mx-auto px-4 py-8">
    <ContactUs
      client:load
      address={home.contact.address}
      phone={home.contact.phone}
      email={home.contact.email}
    />
  </div>
  <Footer slot="footer" />
</Layout>